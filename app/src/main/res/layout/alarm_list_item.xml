<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp">


    <ImageView
        android:id="@+id/iv_fire"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="@dimen/device_list_image_margin_h"
        android:layout_marginBottom="@dimen/device_list_image_margin_h"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/tv_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="火点报警"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_fire"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"></TextView>

    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="@dimen/device_list_image_margin_h"
        android:background="@drawable/icon_key"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_fire"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="详情"
        android:textColor="@color/skyblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"></TextView>

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="西大门摄像头"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_fire"
        app:layout_constraintLeft_toLeftOf="@+id/iv_fire"
        app:layout_constraintRight_toRightOf="@+id/iv_fire">
    </TextView>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021/03/10 11:12 "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_position"
        app:layout_constraintLeft_toLeftOf="@+id/tv_position"
        app:layout_constraintRight_toRightOf="@+id/tv_position">
    </TextView>

    <TextView
    android:id="@+id/tv_level"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="等级：严重"
    android:layout_marginLeft="70dp"
    app:layout_constraintLeft_toRightOf="@+id/tv_time"
    app:layout_constraintTop_toTopOf="@+id/tv_time"
    app:layout_constraintBottom_toBottomOf="@+id/tv_time">
</TextView>


    <TextView
        android:id="@+id/tv_descrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有人闯入 "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toLeftOf="@+id/tv_time"
        >
    </TextView>
    <ImageView
        android:id="@+id/iv_action"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/un_action"
        app:layout_constraintLeft_toRightOf="@+id/tv_descrip"
        app:layout_constraintTop_toTopOf="@+id/tv_descrip"
        app:layout_constraintBottom_toBottomOf="@+id/tv_descrip">
    </ImageView>

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="未处理 "
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/iv_action"
        app:layout_constraintLeft_toRightOf="@+id/iv_action"
        app:layout_constraintTop_toTopOf="@+id/iv_action"
        app:layout_constraintVertical_bias="0.482"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
